<div class="card">
    <div class="card-body">
        <h5 class="card-title">Progress</h5>
        <p class="card-text">State of the gains.</p>
        <p class="card-text" id="current-date"></p>
        <p class="card-text" id="current-weight"></p>
    </div>
</div>

<form class="form progress-form">
    <div class="form-group">
        <label for="date">Enter the date.</label>
        <input class="form-input" type="text" id="date" />
        <label for="weight">Enter your weight.</label>
        <input class="form-input" type="text" id="weight" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit" id="progress-btn">Update Progress</button>
    </div>
</form>

<script src="/js/progress.js"></script>
